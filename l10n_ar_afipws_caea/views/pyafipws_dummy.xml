<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="pyafipws_dummy_form" model="ir.ui.view">
		<field name="name">pyafipws_dummy.form</field>
		<field name="model">pyafipws.dummy</field>
		<field name="arch" type="xml">
			<form string="description">
				<header/>
				<sheet>
					<h1>
						<field domain="[('afip_ws','!=',False)]" name="journal_id"/>
					</h1>
					<group>
						<field name="afip_ws_caea_state"/>
						<field name="app_server_status"/>
						<field name="db_server_status"/>
						<field name="auth_server_status"/>
						<field name="status"/>
					</group>
				</sheet>
				<footer>
					<button attr="{'invisible':[('afip_ws_caea_state','!=','inactive'), ('status','=',True)]}" name="afip_red_button" string="Active CAEA" type="object"/>
					<button attr="{'invisible':[('afip_ws_caea_state','!=','active'), ('status','=',False)]}" name="afip_green_button" string="Return to CAE" type="object"/>
				</footer>
			</form>
		</field>
	</record>
</odoo>